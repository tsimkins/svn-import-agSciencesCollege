/* YOUR CSS RULES START HERE */


#content {
    margin:0;
    padding-top: 0 !important;
}

#portal-columns {
    background-position: left top;
    background-repeat: no-repeat;
    /* The below will put a border below the panorama image without letting it 'bleed' into the content area. */
    /* border-top: 1px solid #666666; */
}

#portal-column-two .portletHeader a {
    color: &dtml-insideRightPortletHeaderTextColor;;
}

#portal-column-two .portlet {
    border-bottom: none;
}

#addthis {
    display: none;
}

.documentActions {
    display: none;
}

#rightcolumn {
    display: none;
}

#portal-column-two dl.linkIcon .portletItem li {
    background-color: transparent;
    padding: 0.0625em 0;
}

#portal-breadcrumbs {
    margin: 0;
    padding-top: 0;
}

#panorama-homepage-image {
    background-repeat: no-repeat;
    border-width: 0 1px;
    border-style: solid;
    border-color: #808080;
    margin-top: -1.75em;
}

body.template-atct_edit #panorama-homepage-image {
    display: none;
}

/* YOUR CSS RULES STOP HERE */

