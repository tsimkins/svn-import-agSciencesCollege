<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<body> 
    
    <metal:content-core fill-slot="content-core">
        <metal:listingmacro define-macro="listing">
        <metal:block use-macro="context/@@folder_listing_z3/macros/content-core">
            <!-- we don't want the dl -->
            <metal:entries fill-slot="entries">
                <metal:block use-macro="context/@@folder_listing_z3/macros/entries">
                    <metal:entry fill-slot="entry">
                <div tal:attributes="class div_class"
                     tal:define="div_class string:tileItem visualIEFloatFix tileSummary;
                                 div_class python:item_type =='FSDPerson' and '%s tileItemLeadImage' % div_class or div_class">

                        <div class="contentLeadImageContainer"
                                tal:condition="python: show_image or item_type == 'FSDPerson'">
                            <tal:leadimage metal:use-macro="context/folder_listing_z3/macros/leadimage" />
                        </div>
                    <h3 class="tileHeadline"
                        metal:define-macro="listitem">

                        <a href="#"
                           class="summary url"
                           tal:attributes="href python:test(item_type in use_view_action, item_url+'/view', item_url);"
                           tal:content="item_title_or_id">
                            Item Title
                        </a>

                    </h3>

                    <metal:show-date use-macro="context/folder_listing_z3/macros/show-date" />

                    <div class="documentByLine" tal:condition="python: site_properties.allowAnonymousViewAbout or not isAnon">
                    <tal:event condition="python: item_type == 'Event'">
                         <div metal:use-macro="here/@@folder_listing_z3/macros/event_date" />
                    </tal:event>
                    <tal:newsitem condition="python: item_type == 'News Item'">
                        <tal:name tal:condition="item_creator"
                            tal:define="author python:pas_member.info(item_creator)">
                          <span class="documentAuthor" i18n:translate="label_by_author">
                            by
                          <a href="#"
                             tal:attributes="href string:${navigation_root_url}/author/${item_creator}"
                             tal:content="author/name_or_id"
                             tal:omit-tag="not:author"
                             i18n:name="author">
                            Bob Dobalina
                          </a>
                          </span>
                        </tal:name>
                        &mdash;
                        <span class="documentModified">
                              <tal:mod i18n:translate="box_last_modified">
                              last modified
                              </tal:mod>
                              <span tal:replace="python:toLocalizedTime(item_modified,long_format=1)">
                                      August 16, 2001 at 23:35:59
                              </span>
                        </span>
                    </tal:newsitem>
                    </div>
                    <div tal:define="item_object item/getObject"
                        metal:define-macro="fsd_summary" tal:condition="python:item_type =='FSDPerson'" class="facultyStaffDirectory" >
                        <ul tal:condition="item_object/getJobTitles" class="jobTitle">
                            <li tal:repeat="jobTitle item_object/getJobTitles" tal:content="jobTitle" />
                        </ul>

                        <p>
                            <span tal:condition="item_object/getEmail">
                                <span tal:replace="structure python:context.spamProtect(item_object.getEmail())" />
                            </span>
                            <br />
                            <span tal:condition="item_object/getOfficePhone" class="phone">
                                <span tal:replace="item_object/getOfficePhone" />
                            </span>
                        </p>

                        <tal:areas tal:define="areas item_object/extension_areas|nothing" tal:condition="areas">

                            <div>Areas of Expertise:</div>
                            <ul class="areasExpertise">
                                <li tal:repeat="a areas" tal:content="a" />
                            </ul>

                        </tal:areas>
                        
                
                    </div>
                    
                    <div class="tileBody" tal:condition="python: item_type != 'FSDPerson'">
                        <p tal:omit-tag="" tal:condition="not:item_description">
                            &nbsp;
                        </p>
                        <p tal:content="item_description"
                              tal:condition="item_description">
                            description
                        </p>
                    </div>

                    <div class="tileFooter"
                        tal:define="read_more context/show_read_more|nothing"
                        tal:condition="python:item_type !='FSDPerson' and read_more">
                        <p>
                            <a tal:attributes="href python:test(item_type in use_view_action, item_url+'/view', item_url);"
                               i18n:translate="read_more">
                            Read More&hellip;
                            </a>
                            <span tal:condition="python:item_type !='FSDPerson'">&nbsp;</span>
                        </p>
                    </div>

                    <div class="visualClear"><!-- --></div>

                </div>
                    </metal:entry>
                </metal:block>
            </metal:entries>
        </metal:block>
        </metal:listingmacro>
    </metal:content-core>
    
</body>
</html>
