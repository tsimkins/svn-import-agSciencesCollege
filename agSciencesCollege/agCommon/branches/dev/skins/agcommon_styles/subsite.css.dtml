#portal-column-content {
    background-repeat: no-repeat;
}

#portal-breadcrumbs.headerimage {
	background-color: &dtml-breadcrumbBackgroundColor;;
	color: &dtml-breadcrumbTextColor;;
	padding: 4px 8px;
	z-index: 20;
	position: relative;
	opacity: 0.80;
	filter: alpha(opacity=80);	
	margin: -145px 0 135px 0;
	height: 17px;
}

#portal-breadcrumbs.headerimage .breadcrumbSeparator {
	color: &dtml-breadcrumbSeparatorColor;;
}

#portal-breadcrumbs.headerimage a {
	color: &dtml-breadcrumbLinkColor;;
}


