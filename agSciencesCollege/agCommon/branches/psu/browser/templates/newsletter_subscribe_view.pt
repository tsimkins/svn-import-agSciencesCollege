<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<body>

<metal:title fill-slot="content-title">

    <h1 class="documentFirstHeading" 
        tal:condition="view/newsletter|nothing"
        tal:content="view/newsletter_title" />
    
    <p class="documentDescription">Subscription information</p>

</metal:title>

<metal:content fill-slot="content-text">

    <div metal:define-macro="text-field-view"
        tal:content="structure view/getText|nothing">
        [ Body Text ]
    </div>

</metal:content>

</body>
</html>
