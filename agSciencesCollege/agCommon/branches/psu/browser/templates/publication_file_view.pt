<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<body>

    <metal:content-core fill-slot="content-core">
        <metal:block define-macro="content-core"
                     tal:define="content_type context/get_content_type|context/Format;
                                 number_pages view/getNumPages|nothing;
                                 publication_code context/extension_publication_code|nothing;
                                 publication_series context/extension_publication_series|nothing;">

            <h2>Download Publication</h2>
            <p>
                <metal:field use-macro="python:context.widget('file', mode='view')">
                File
                </metal:field>
            </p>


            <div class="publication"  tal:condition="number_pages">
                <h3 class="inline">Number of Pages</h3> <span tal:replace="number_pages" />
            </div>

            <div class="publication" tal:condition="publication_code">
                <h3 class="inline">Publication Code</h3> <span tal:replace="publication_code" />
            </div>

            <div class="publication"  tal:condition="publication_series">
                <h3 class="inline">Publication Series</h3> <span tal:replace="publication_series" />
            </div>


        </metal:block>
    </metal:content-core>

    <metal:footer fill-slot="footer">
        <div id="disclaimer">
            <p>
                This publication is available in alternative media on 
                request.
            </p>
        </div>

    </metal:footer>
</body>

</html>

