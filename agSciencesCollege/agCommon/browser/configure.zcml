<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="agcommon">

    <!-- "agCommon" Zope 3 skin layer.
         Register views, viewlets and resources for this layer to make sure
         they only apply to the 'agCommon' theme.
         You can also use this layer to override default Plone browser views
         and viewlets only within the 'agCommon' theme.
      -->
    <interface
        interface=".interfaces.IThemeSpecific"
        type="zope.publisher.interfaces.browser.IBrowserSkinType"
        name="agCommon"
        />

    <browser:viewletManager
        name="agcommon.abovecontentviews"
        provides=".interfaces.IAboveContentViews"
        class="plone.app.viewletmanager.manager.OrderedViewletManager"
        layer=".interfaces.IThemeSpecific"
        permission="zope2.View"
        />

    <browser:viewletManager
        name="agcommon.belowleftcolumn"
        provides=".interfaces.IBelowLeftColumn"
        class="plone.app.viewletmanager.manager.OrderedViewletManager"
        layer=".interfaces.IThemeSpecific"
        permission="zope2.View"
        />

    <!-- adminlinks -->
    <browser:viewlet
        name="agcommon.adminlinks"
        manager="Products.agCommon.browser.interfaces.IAboveContentViews"
        class=".viewlets.AdminLinksViewlet"
        layer=".interfaces.IThemeSpecific"
        permission="zope2.View"
        />

    <!-- contact -->
    <browser:viewlet
        name="agcommon.contact"
        manager="Products.agCommon.browser.interfaces.IBelowLeftColumn"
        class=".viewlets.ContactViewlet"
        layer=".interfaces.IThemeSpecific"
        permission="zope2.View"
        />

        
 <include package="z3c.jbot" file="meta.zcml" />
  <browser:templateOverrides
      directory="templates" />

</configure>
