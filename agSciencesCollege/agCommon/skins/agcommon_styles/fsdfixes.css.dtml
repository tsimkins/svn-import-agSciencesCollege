/* Missing table border */

.facultyStaffDirectory table.listing {
	border: 1px solid &dtml-globalBorderColor;;
}

body.template-fsd_atoz_view #portal-columns,
body.template-fsd_atoz_view #content {
    float: none;
}

body.template-person_view #portal-columns,
body.template-person_view #content {
    float: none;
}

body.template-department_standard_view #portal-columns,
body.template-department_standard_view #content {
    float: none;
}

body.template-classification_standard_view #portal-columns,
body.template-classification_standard_view #content {
    float: none;
}

.facultyStaffDirectory.personView .headshot {
    margin:5em 0 0;
}

.facultyStaffDirectory.personView .headshot img {
    margin-right: 0;
    float: right;
    border: none;
}

body.template-department_standard_view #portal-column-content .visualClear {
    display: block;
}

body.template-department_standard_view #portal-column-content .classificationListing {
    float: left;
}

body.template-classification_standard_view #portal-column-content .visualClear {
    display: block;
}

body.template-classification_standard_view #portal-column-content .classificationListing {
    float: left;
}

.facultyStaffDirectory .standardView .headshot img {
    border: none;
}

