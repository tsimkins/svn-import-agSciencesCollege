<?xml version="1.0"?>
<object name="Subsite"
        meta_type="Factory-based Type Information with dynamic views"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n">
   
 <property name="title">Subsite</property>
 <property name="description">A subsite with the standard news/events/etc.</property>
 <property name="content_icon">subsite.png</property>
 <property name="content_meta_type">Subsite</property>
 <property name="product">agsci.subsite</property>
 <property name="factory">addSubsite</property>
 <property name="immediate_view">folder_summary_view</property>
 <property name="global_allow">True</property>
 <property name="filter_content_types">True</property>
 <property name="allowed_content_types">
	<element value="Topic"/>
	<element value="Link"/>
	<element value="Folder"/>
	<element value="Document"/>
	<element value="PhotoFolder"/>
	<element value="HomePage"/>
	<element value="File"/>
	<element value="Blog"/>
	<element value="Section"/>
 </property>
 <property name="allow_discussion">False</property>
 <property name="default_view">folder_summary_view</property>
 <property name="view_methods">
  <element value="folder_summary_view"/>
  <element value="atct_album_view"/>
  <element value="folder_listing"/>
  <element value="subfolder_view"/>
 </property>
 <alias from="(Default)" to="(dynamic view)"/>
 <alias from="edit" to="atct_edit"/>
 <alias from="sharing" to="@@sharing"/>
 <alias from="view" to="(selected layout)"/>
 <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${folder_url}/" visible="True"
    i18n:attributes="title">
  <permission value="View"/>
 </action>
 <action title="Edit" action_id="edit" category="object" condition_expr="not:object/@@plone_lock_info/is_locked_for_current_user|python:True"
    url_expr="string:${object_url}/edit" visible="True"
    i18n:attributes="title">
  <permission value="agsci.subsite: Edit Subsite"/>
 </action>
 <action title="Folder Listing" action_id="folderlisting" category="folder"
    condition_expr="object/isPrincipiaFolderish"
    url_expr="string:${folder_url}/view" visible="False"
    i18n:attributes="title">
  <permission value="View"/>
 </action>
</object>
