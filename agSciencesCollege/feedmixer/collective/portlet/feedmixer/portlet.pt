<dl class="portlet portletfeedmixer"
    i18n:domain="collective.portlet.feedmixer">

    <dt class="portletHeader" tal:condition="not: view/hide_header|nothing">
        <span class="portletTopLeft"></span>
        <span tal:content="structure view/title">
           Header
        </span>
        <span class="portletTopRight"></span>
    </dt>

    <tal:entry
        tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime"
        tal:repeat="entry view/entries">
        <dd class="portletItem"
            tal:define="oddrow repeat/entry/odd"
            tal:attributes="class python:oddrow and 'portletItem even' or 'portletItem odd'">

            <a href=""
               class ="title"
               tal:attributes="href entry/link;
                               title entry/title"><span tal:replace="structure entry/title">Title</span></a>
                <span class="portletItemDetails date"
	                tal:condition="not: view/hide_date|nothing"
                    tal:content="python:toLocalizedTime(entry['updated'])">
                    Nov 1
                </span>

                <span class="portletItemDetails summary"
                    tal:content="entry/summary_detail/value"
                    tal:condition="view/show_summary|nothing">
                    [Feed Summary]
                </span>

                <a tal:condition="view/show_summary|nothing" class = "more"
                   tal:attributes="href entry/link">
                        More &raquo;
                </a>
        </dd>
    </tal:entry>
    
    <dd class="portletFooter">
      <a href="#"
          class="tile"
          tal:condition="not: view/hide_footer|nothing"
          tal:attributes="href view/more_url"
          i18n:translate="box_full_feed_view">More&hellip;</a>
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>

</dl>
